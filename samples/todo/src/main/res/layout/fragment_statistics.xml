<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kore.example.todo.TasksFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/totalTasksCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/completeTasksCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/totalTasksCount" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/completePercent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/completeTasksCount" />

</androidx.constraintlayout.widget.ConstraintLayout>
